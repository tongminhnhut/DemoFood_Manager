<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="9"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical|start"
                    android:id="@+id/txtName_OrderItem"
                    android:text="#123456"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textStyle="italic"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical|start"
                    android:id="@+id/txtStatus_OrderItem"
                    android:text="Status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textStyle="italic"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical|start"
                    android:id="@+id/txtPhone_OrderItem"
                    android:text="01654580403"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textStyle="italic"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical|start"
                    android:id="@+id/txtAddress_OrderItem"
                    android:text="643 Tạ Quang Bửu, P4, Quận 8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_weight="4"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <info.hoang8f.widget.FButton
                app:shadowEnabled="true"
                app:shadowHeight="5dp"
                android:layout_weight="1"
                app:fButtonColor="@android:color/white"
                android:text="Edit"
                android:id="@+id/btnEdit_OrderItem"
                app:cornerRadius="0dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <info.hoang8f.widget.FButton
                app:shadowEnabled="true"
                app:shadowHeight="5dp"
                android:layout_weight="1"
                app:fButtonColor="@android:color/white"
                android:text="Remove"
                android:id="@+id/btnRemove_OrderItem"
                app:cornerRadius="0dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <info.hoang8f.widget.FButton
                app:shadowEnabled="true"
                app:shadowHeight="5dp"
                android:layout_weight="1"
                app:fButtonColor="@android:color/white"
                android:text="Detail"
                android:id="@+id/btnDetail_OrderItem"
                app:cornerRadius="0dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />


        </LinearLayout>

    </LinearLayout>



</android.support.v7.widget.CardView>